<idea-plugin>
    <id>com.github.fe3dback.intellijgoarchlint</id>
    <name>GoArchLint file support</name>
    <version>0.4</version>
    <vendor url="https://github.com/fe3dback">fe3dback</vendor>
    <description>Provides assistance for editing go arch YAML files.</description>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.plugins.yaml</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="YAML_GO_ARCH"
                language="yaml"
                implementationClass="com.github.fe3dback.intellijgoarchlint.file.GoArchFileType"
        />

        <completion.contributor
                language="yaml"
                implementationClass="com.github.fe3dback.intellijgoarchlint.GoArchYamlCompletionContributor"
        />

        <psi.referenceContributor
                language="yaml"
                implementation="com.github.fe3dback.intellijgoarchlint.GoArchYamlReferenceContributor"
        />

<!--        <lang.findUsagesProvider-->
<!--                language="yaml"-->
<!--                implementationClass="com.github.fe3dback.intellijgoarchlint.GoArchYamlFindUsagesProvider"-->
<!--        />-->

