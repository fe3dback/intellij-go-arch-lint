<!--                         groupName="GoArchLint Inspections"-->
<!--                         enabledByDefault="true"-->
<!--                         level="ERROR"-->
<!--                         implementationClass="com.github.fe3dback.intellijgoarchlint.inspection.SchemeInspection"/>-->

    </extensions>
</idea-plugin>
